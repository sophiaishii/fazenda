<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sophia.UsuarioExcluirControle">
    <children>
        <!-- Título -->
        <Label layoutX="100.0" layoutY="20.0" text="Excluir Usuário" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- ComboBox para seleção -->
        <Label layoutX="50.0" layoutY="70.0" text="Selecionar Usuário:" />
        <ComboBox fx:id="comboUsuarios" layoutX="180.0" layoutY="65.0" prefWidth="150.0" onAction="#atualizaUsuarioSelecionado" />

        <!-- Botão Excluir -->
        <Button layoutX="50.0" layoutY="150.0" mnemonicParsing="false" onAction="#excluirUsuario" text="Excluir" prefWidth="100.0" />

        <!-- Botão Voltar -->
        <Button layoutX="230.0" layoutY="150.0" mnemonicParsing="false" onAction="#voltarMenu" text="Voltar ao Menu" prefWidth="100.0" />
    </children>
</AnchorPane>
