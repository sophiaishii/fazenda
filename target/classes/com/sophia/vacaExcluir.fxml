<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sophia.VacaExcluirControle">
    <children>
        <!-- Título da tela -->
        <Label layoutX="150.0" layoutY="30.0" text="Excluir Vaca" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <!-- Label e ComboBox para selecionar a vaca -->
        <Label layoutX="50.0" layoutY="90.0" text="Selecione a Vaca:" />
        <ComboBox fx:id="comboVacas" layoutX="150.0" layoutY="85.0" prefHeight="35.0" prefWidth="200.0" onAction="#atualizaVacaSelecionada"/>

        <!-- Botões -->
        <Button layoutX="100.0" layoutY="180.0" mnemonicParsing="false" onAction="#excluirVaca" text="Excluir" prefWidth="100.0" />
        <Button layoutX="200.0" layoutY="180.0" mnemonicParsing="false" onAction="#voltarMenu" text="Cancelar" prefWidth="100.0" />
    </children>
</AnchorPane>
